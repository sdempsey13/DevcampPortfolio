<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
    <div class="card-body">
      <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
      <p class="card-text">
        <span><%= portfolio_item.title %></span><%= portfolio_item.subtitle %>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-primary"><%= link_to 'View', portfolio_show_path(portfolio_item) %></button>
        </div>
        <small class="text-muted"><%= distance_of_time_in_words(portfolio_item.created_at, Time.now) %></small>
      </div>
    </div>
  </div>
</div>





<%= link_to 'Delete Portfolio Item', portfolio_path(portfolio_item), method: :delete, data: { confirm: '
Are you sure?' } if logged_in?(:site_admin)%>
